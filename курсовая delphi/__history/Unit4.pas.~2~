    Otdel1[nzap3]:=Otdel[nzap1];



    end;
    if OpenDialog1.Execute then
  begin
  FileNameZzz:=OpenDialog1.FileName;
  AssignFile(Fzzz, FileNameZzz);
  Reset(Fzzz);
  end;
nzap4:=0;
nzap5:=0;
while not eof(Fzzz) do     // будет проверять файл,пока указатель не будет в конце файла
  begin
  nzap4:=nzap4+1;
  nzap5:=nzap5+1;
  Read(Fzzz,uchenik[nzap4]); // записываем содержимое файла Fz в массив ученик nzap
